											"required": [
												"role",
												"name"
											],
											"type": "object"
										},
										"accessToken": {
											"type": "string"
										},
										"type": {
											"$ref": "#/components/schemas/AccessTokenTypes"
										},
										"refreshToken": {
											"type": "string"
										}
